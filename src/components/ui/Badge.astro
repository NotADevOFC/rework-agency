---
interface Props {
  variant?: 'default' | 'accent' | 'success' | 'error';
  class?: string;
}

const { variant = 'default', class: className } = Astro.props;

const variants = {
  default: 'bg-white/5 text-text-secondary border-white/10',
  accent: 'bg-accent-primary/10 text-accent-primary border-accent-primary/20',
  success: 'bg-success/10 text-success border-success/20',
  error: 'bg-error/10 text-error border-error/20',
};
---

<span
  class:list={[
    'inline-flex items-center px-3 py-1 text-sm font-medium rounded-full border',
    variants[variant],
    className,
  ]}
>
  <slot />
</span>
