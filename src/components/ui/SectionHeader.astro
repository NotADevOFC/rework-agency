---
interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  class?: string;
}

const { title, subtitle, centered = true, class: className } = Astro.props;
---

<div class:list={['mb-12 md:mb-16', centered && 'text-center', className]}>
  <h2 class="text-4xl md:text-5xl font-semibold tracking-tight">
    {title}
  </h2>
  {subtitle && (
    <p class="mt-4 text-lg md:text-xl text-text-secondary max-w-2xl mx-auto">
      {subtitle}
    </p>
  )}
</div>
