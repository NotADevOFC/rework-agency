# ===========================================
# REWORK AGENCY - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# -------------------------------------------
# WordPress Headless CMS
# -------------------------------------------
# GraphQL endpoint for fetching content
WP_GRAPHQL_URL=https://admin.rework.agency/graphql

# REST API endpoint (for Contact Form 7)
WP_REST_URL=https://admin.rework.agency/wp-json
PUBLIC_WP_REST_URL=https://admin.rework.agency/wp-json

# Contact Form 7 form ID
CF7_FORM_ID=123

# -------------------------------------------
# Site Configuration
# -------------------------------------------
# Your production site URL (used for sitemap, canonical URLs, etc.)
PUBLIC_SITE_URL=https://rework.agency

# -------------------------------------------
# Analytics (optional)
# -------------------------------------------
# Plausible Analytics - your domain
PUBLIC_PLAUSIBLE_DOMAIN=rework.agency

# Google Analytics 4 - Measurement ID
PUBLIC_GA_ID=G-XXXXXXXXXX

# -------------------------------------------
# Local Development (example values)
# -------------------------------------------
# WP_GRAPHQL_URL=http://local.rework.com/graphql
# WP_REST_URL=http://local.rework.com/wp-json
# PUBLIC_WP_REST_URL=http://local.rework.com/wp-json
# PUBLIC_SITE_URL=http://localhost:4321
# CF7_FORM_ID=1
