<button
  id="theme-toggle"
  type="button"
  class="theme-toggle group relative w-10 h-10 flex items-center justify-center rounded-full glass text-text-secondary hover:text-white transition-all duration-300"
  aria-label="Changer de thÃ¨me"
>
  <!-- Sun icon (visible in dark mode) -->
  <svg
    class="sun-icon w-5 h-5 absolute transition-all duration-500"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    />
  </svg>

  <!-- Moon icon (visible in light mode) -->
  <svg
    class="moon-icon w-5 h-5 absolute transition-all duration-500"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    />
  </svg>

  <!-- Glow effect on hover -->
  <div class="absolute inset-0 rounded-full bg-gradient-to-br from-amber-400/20 to-orange-500/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300 dark-glow"></div>
  <div class="absolute inset-0 rounded-full bg-gradient-to-br from-indigo-400/20 to-purple-500/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300 light-glow"></div>
</button>

<style>
  /* Dark mode (default) - show sun */
  :global(html:not(.light)) .sun-icon {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }

  :global(html:not(.light)) .moon-icon {
    opacity: 0;
    transform: rotate(-90deg) scale(0.5);
  }

  :global(html:not(.light)) .dark-glow {
    display: block;
  }

  :global(html:not(.light)) .light-glow {
    display: none;
  }

  /* Light mode - show moon */
  :global(html.light) .sun-icon {
    opacity: 0;
    transform: rotate(90deg) scale(0.5);
  }

  :global(html.light) .moon-icon {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }

  :global(html.light) .dark-glow {
    display: none;
  }

  :global(html.light) .light-glow {
    display: block;
  }
</style>

<script>
  const themeToggle = document.getElementById('theme-toggle');

  // Get initial theme
  function getTheme(): 'light' | 'dark' {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
      return localStorage.getItem('theme') as 'light' | 'dark';
    }
    if (window.matchMedia('(prefers-color-scheme: light)').matches) {
      return 'light';
    }
    return 'dark';
  }

  // Apply theme
  function setTheme(theme: 'light' | 'dark') {
    if (theme === 'light') {
      document.documentElement.classList.add('light');
    } else {
      document.documentElement.classList.remove('light');
    }
    localStorage.setItem('theme', theme);
  }

  // Initialize
  setTheme(getTheme());

  // Toggle on click
  themeToggle?.addEventListener('click', () => {
    const currentTheme = document.documentElement.classList.contains('light') ? 'light' : 'dark';
    const newTheme = currentTheme === 'light' ? 'dark' : 'light';
    setTheme(newTheme);
  });

  // Listen for system preference changes
  window.matchMedia('(prefers-color-scheme: light)').addEventListener('change', (e) => {
    if (!localStorage.getItem('theme')) {
      setTheme(e.matches ? 'light' : 'dark');
    }
  });
</script>
